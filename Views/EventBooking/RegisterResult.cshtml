@using Codesanook.EventManagement.ViewModels
@model EventBookingResultViewModel
<h1 class="text-center">@Html.TitleForPage(T("Registration result").ToString())</h1>
<div class="row">
    <div class="col-12 offset-md-3 col-md-6">
        <h4>Event: @Model.Event.Title</h4>
        <p>
            <i class="fa fa-calendar" aria-hidden="true"></i>
            @Model.Event.GetFormattedSchedule()
        </p>
        <p>
            <i class="fa fa-clock-o" aria-hidden="true"></i>
            <span>@Model.Event.StartDateTimeUtc.Value.ToString("HH:mm")</span>
            <span>-</span>
            <span>@Model.Event.FinishDateTimeUtc.Value.ToString("HH:mm")</span>
            <span>(GMT+7)</span>
        </p>
        <p><i class="fa fa-map-pin main-color mr-2"></i> @Model.Event.Location</p>
        <div class="text-center mt-5 mb-5">
            <h4>Thank you for register.</h4>
            <h6 class="mt-4">ท่านสามารถโอนเงินได้ที่</h6>
            @* Render BankAccount shape which is PaymentInformation.cshtml *@
            @foreach (var account in Model.BankAccounts)
            {
                @Display(New.BankAccount(BankAccount: account))
            }
        </div>
    </div>
</div>

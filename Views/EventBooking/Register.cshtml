@using Codesanook.EventManagement.Models
@using Codesanook.EventManagement.ViewModels
@using Codesanook.EventManagement.Controllers
@model EventBookingRegisterViewModel

<h1 class="text-center">@Html.TitleForPage(T("Register an event").ToString())</h1>
<div class="row">
    <div class="col-12 offset-md-3 col-md-6">
        <h4>Event: @Model.Event.Title</h4>
        <p class="mt-3"><i class="fa fa-calendar main-color mr-2"></i> 4 มิ.ย. - 31 ธ.ค. 2563</p>
        <p><i class="fa fa-clock-o main-color mr-2"></i> 11:00 - 20:00 (GMT+7)</p>
        <p><i class="fa fa-map-pin main-color mr-2"></i> MODA Gallery ชั้น 2 ศูนย์การค้าริเวอร์ซิตี้ แบงค๊อก</p>
        <h6 class="mt-4">
            <strong>Please fill your information.</strong>
        </h6>

        @using (Html.BeginFormAntiForgeryPost(
            Url.Action(
                nameof(EventBookingController.Register),
                new { id = Model.Event.Id }
            )
        ))
        {
            @Html.Partial("_AttendeeFields", Model.EventAttendees)
            <input id="contact-form-submit" class="form-submit-btn" type="submit" value="SUBMIT">
        }
    </div>
</div>
